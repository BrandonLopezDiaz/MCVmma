@model IEnumerable<MCVmma.Models.Usuario>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="offset-9 col-3 mb-3" >
        <a asp-action="Crear" asp-controller="Home" class="btn-success d-block mx-auto btn-lg"><i class="fa-solid fa-diamond"></i> Nuevo usuario </a>
    </div>
 </div>

<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Lista de usuarios</strong></h1>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0) {
                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(x=>x.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(x=>x.User)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(x=>x.Password)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(x=>x.Rol)
                                    </th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var iteam in Model){

                                    <tr>
                                        <td>
                                            @Html.DisplayFor(x=>iteam.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(x=>iteam.User)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(x=>iteam.Password)
                                        </td>
                                        <td>
                                        @Html.DisplayFor(x=>iteam.Rol.Name)
                                        </td>
                                        <td>
                                            <a asp-action="Editar" asp-controller="Home" class="btn btn-warning"><i class="fa-solid fa-pen-nib"></i>Editar </a>
                                            <a asp-action="Eliminar" asp-controller="Home" class="btn btn-danger"><i class="fa-solid fa-poo"></i>Eliminar </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }else{
                        <p>No hay registro</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>